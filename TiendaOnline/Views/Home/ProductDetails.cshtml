@model TiendaOnline.Models.Dto.ProductDto
@{
    ViewData["Title"] = "ProductDetails";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .product-container {
        max-width: 1200px;
        margin: 2rem auto;
        padding: 0 1rem;
    }

    .product-card {
        background: white;
        border-radius: 12px;
        box-shadow: 0 8px 24px rgba(0, 0, 0, 0.1);
        overflow: hidden;
        border: 1px solid #f0f0f0;
    }

    .product-header {
        background: linear-gradient(135deg, #ff7b25, #ff5e00);
        color: white;
        padding: 1.5rem 2rem;
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

    .product-title {
        font-size: 1.8rem;
        font-weight: 700;
        margin: 0;
    }

    .product-price {
        font-size: 1.5rem;
        font-weight: 700;
        background: rgba(255, 255, 255, 0.2);
        padding: 0.5rem 1rem;
        border-radius: 8px;
    }

    .product-body {
        padding: 2rem;
    }

    .product-grid {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 2rem;
    }

    .product-image-container {
        border-radius: 8px;
        overflow: hidden;
        background: #f9f9f9;
        display: flex;
        align-items: center;
        justify-content: center;
        aspect-ratio: 1/1;
    }

        .product-image-container img {
            max-width: 100%;
            max-height: 100%;
            object-fit: contain;
        }

    .product-info {
        display: flex;
        flex-direction: column;
        gap: 1.5rem;
    }

        .product-info span {
            display: inline-block;
            background: #fff5e6;
            color: #ff5e00;
            padding: 0.5rem 1rem;
            border-radius: 20px;
            font-weight: 600;
            font-size: 0.9rem;
        }

        .product-info div:first-of-type {
            line-height: 1.6;
            color: #555;
        }

    .quantity-control {
        display: flex;
        align-items: center;
        gap: 1rem;
        margin-top: 1rem;
    }

        .quantity-control label {
            font-weight: 600;
            color: #333;
        }

    .quantity-buttons {
        display: flex;
        align-items: center;
        border: 1px solid #ddd;
        border-radius: 6px;
        overflow: hidden;
    }

        .quantity-buttons button {
            background: #f8f8f8;
            border: none;
            width: 40px;
            height: 40px;
            font-size: 1.2rem;
            cursor: pointer;
            transition: all 0.2s;
        }

            .quantity-buttons button:hover {
                background: #eee;
            }

        .quantity-buttons input {
            width: 60px;
            height: 40px;
            text-align: center;
            border: none;
            border-left: 1px solid #ddd;
            border-right: 1px solid #ddd;
            font-size: 1rem;
        }

    .product-footer {
        padding: 1.5rem 2rem;
        display: flex;
        justify-content: space-between;
        align-items: center;
        border-top: 1px solid #f0f0f0;
    }

        .product-footer a {
            display: flex;
            align-items: center;
            gap: 0.5rem;
            color: #ff5e00;
            text-decoration: none;
            font-weight: 600;
            transition: all 0.2s;
        }

            .product-footer a:hover {
                color: #e65100;
            }

    .btn-icon {
        transition: transform 0.2s;
    }

    .product-footer a:hover .btn-icon {
        transform: translateX(-4px);
    }

    .btn-primary {
        background: #ff5e00;
        color: white;
        border: none;
        padding: 0.75rem 1.5rem;
        border-radius: 6px;
        font-weight: 600;
        cursor: pointer;
        transition: all 0.2s;
        display: flex;
        align-items: center;
        gap: 0.5rem;
    }

        .btn-primary:hover {
            background: #e65100;
            transform: translateY(-2px);
            box-shadow: 0 4px 12px rgba(255, 94, 0, 0.3);
        }

    .text-danger {
        color: #e53935;
        font-size: 0.9rem;
        margin-top: 0.5rem;
        display: block;
    }

    .animate-fade {
        animation: fadeIn 0.5s ease-in-out;
    }

    @@keyframes fadeIn {
        from {
            opacity: 0;
            transform: translateY(10px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    @@media (max-width: 768px) {
        .product-grid {
            grid-template-columns: 1fr;
        }

        .product-header {
            flex-direction: column;
            align-items: flex-start;
            gap: 1rem;
        }

        .product-footer {
            flex-direction: column;
            gap: 1rem;
            align-items: stretch;
        }

        .btn-primary {
            justify-content: center;
        }
    }
</style>

<div class="product-container animate-fade">
    <form method="post" asp-action="ProductDetails" asp-controller="Home">
        <input asp-for="ProductId" hidden />
        <div class="product-card">
            <div class="product-header">
                <h1 class="product-title">@Model.Name</h1>
                <div class="product-price">@string.Format("{0:c}", Model.Price)</div>
            </div>

            <div class="product-body">
                <div class="product-grid">
                    <div class="product-image-container">
                        <img src="@Model.ImageUrl" alt="@Model.Name" />
                    </div>
                    <div class="product-info">
                        <div>
                            <span>@Model.CategoryName</span>
                            <div>@Html.Raw(Model.Description)</div>
                        </div>
                        <div class="quantity-control">
                            <label for="Count">Cantidad:</label>
                            <div class="quantity-buttons">
                                <button type="button" onclick="decrementQuantity()">-</button>
                                <input id="Count" asp-for="Count" type="number" name="Count" value="1" min="1" />
                                <button type="button" onclick="incrementQuantity()">+</button>
                            </div>
                            <span asp-validation-for="Count" class="text-danger"></span>
                        </div>
                    </div>
                </div>
            </div>
            <div class="product-footer">
                <a asp-action="Index" asp-controller="Home">
                    <svg class="btn-icon" width="20" height="20" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                        <path d="M19 12H5M5 12L12 19M5 12L12 5" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" />
                    </svg>
                    Volver a la tienda
                </a>
                <button type="submit" class="btn btn-primary">
                    <i class="fas fa-shopping-cart"></i>
                    Añadir al carrito
                </button>
            </div>
        </div>
    </form>
</div>

<script>
    function incrementQuantity() {
        const countInput = document.getElementById('Count');
        countInput.value = parseInt(countInput.value) + 1;
        validateQuantity();
    }

    function decrementQuantity() {
        const countInput = document.getElementById('Count');
        if (parseInt(countInput.value) > 1) {
            countInput.value = parseInt(countInput.value) - 1;
        }
        validateQuantity();
    }

    function validateQuantity() {
        const validation = document.querySelector('[asp-validation-for="Count"]');
        const countInput = document.getElementById('Count');

        if (parseInt(countInput.value) < 1) {
            validation.textContent = "La cantidad debe ser al menos 1";
            return false;
        } else {
            validation.textContent = "";
            return true;
        }
    }

    document.getElementById('Count').addEventListener('input', validateQuantity);
    document.querySelector('form').addEventListener('submit', function(e) {
        if (!validateQuantity()) {
            e.preventDefault();
        }
    });
</script>